<div class="container">
  <div class="row">
    <div class="col-12">
      <h1>All Our Flats (<%= @flats.count %>)</h1>. <%= link_to "Add a new flat", 'flats/new', class: "btn btn-primary" %>
    </div>
  </div>

<div class="cards-container">
  <div class="row">
     <% @flats.each do |flat| %>
     <div class="col-sm">
      <div class="flat-card">
         <div class="flat-card-content">
        <div class="flat-card-title">
          <h3><%= flat.name%></h3>
        </div>
        <p><%= flat.address %></p>
        <div class="flex-signs">
          <div class="flex">
            <i class="fas fa-dollar-sign"></i><span><%= flat.price_per_night %></span>
          </div>
          <div class="flex ml-3"><i class="fas fa-user-friends"></i> <span><%= flat.number_of_guests %></span>
          </div>
        </div>
         <div class="card-actions">
             <%= link_to "More Info", flat_path(flat) %>
          </div>
      </div>
      </div>
    </div>
     <% end %>
  </div>
</div>

